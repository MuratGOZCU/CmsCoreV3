@await Component.InvokeAsync("ListProducts", new { categoryNames = "Ürünler", count = 4, title = "Ürünler" })
@await Component.InvokeAsync("ListProducts", new { categoryNames = "Promosyonlar", count = 4, title = "Promosyonlar" })
