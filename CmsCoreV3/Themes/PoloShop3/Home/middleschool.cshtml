@inject CustomLocalizer Localizer
@{
    ViewData["Title"] = "Ortaokul";
}

<div id="wrapper-content">
    <!-- PAGE WRAPPER-->
    <div id="page-wrapper">
        <!-- MAIN CONTENT-->
        <div class="main-content">
            <!-- CONTENT-->
            <div class="content">
                <div id="middleschool" class="section background-opacity page-title set-height-top">
                    <div class="container">
                        <div class="page-title-wrapper">
                        </div>
                    </div>
                </div>
                <div class="section">
                    <div id="middleschool" class="search-input">
                        <div class="container">
                            <div class="search-input-wrapper">
                                @await Component.InvokeAsync("EmbedForm", new { name = Localizer["OrtaOkul iletişim"].ToString(), template = "MiddleSchoolForm" })
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section section-padding courses">
                    <div class="container">
                        <div class="group-title-index">
                            <h1 class="center-title">@Localizer["ORTAOKUL"]</h1>
                            <div class="event-detail-des">
                                <div class="event-detail-des-content">
                                    @Html.Raw(Model.Body)
                                </div>
                            </div>
                            <br />
                            @await Component.InvokeAsync("LatestPosts", new { categoryNames = Localizer["ortaokul"].ToString(), count = 6 })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- BUTTON BACK TO TOP-->
        <div id="back-top"><a href="#top"><i class="fa fa-angle-double-up"></i></a></div>
    </div>
</div>