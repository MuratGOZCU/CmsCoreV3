<div id="wrapper-content">
    <!-- PAGE WRAPPER-->
    <div id="page-wrapper">
        <!-- MAIN CONTENT-->
        <div class="main-content">
            <!-- CONTENT-->
                <div class="content">
                    <div class="section background-opacity page-title set-height-top">
                        <div class="container">
                            <div class="page-title-wrapper">
                                <h2 class="captions">İşlem Başarıyla Tamamlandı</h2><br />
                                <h3>@Html.Raw(ViewBag.FormClosingDescription)</h3><br />
                                <ol class="breadcrumb">
                                    <li><a href="/"><span id="counter">5</span> saniye içerisinde önceki sayfaya yönlendirileceksiniz.</a></li>
                                </ol>
                                <button onclick="window.location.href='@TempData["Referer"]'" class="btn btn-404" style="background-color:#444750;"><span>Önceki Sayfa</span></button>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <!-- BUTTON BACK TO TOP-->
    <div id="back-top"><a href="#top"><i class="fa fa-angle-double-up"></i></a></div>
</div>
@section scripts {
    <script>
        var count = 5;
        setInterval(countToZero, 1000);

        function countToZero() {
            count--;
            $("#counter").text(count);
            if (count <= 0) {
                window.location.href = "@TempData["Referer"]";
            }
        }
    </script>
}