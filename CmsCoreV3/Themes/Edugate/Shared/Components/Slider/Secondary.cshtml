@model CmsCoreV3.Models.Slider
@if (Model != null && Model.Id > 0)
{
    <div id="homeSlider2" style="clear:both;">
        <div class="section slider-banner set-height-top" style="background:url('/edugate/images/background-gradient-gray.png') no-repeat whitesmoke;">
            @{ int index = 0;}
            @foreach (var slide in Model.Slides.Where(w => w.IsPublished == true).ToList())
            {
                index++;
                <div class="slider-item">

                    <div class="slider-@index">
                        <div class="section why-choose-us">
                            <div class="why-choose-us-wrapper-top" style="position:relative;">
                                
                                <div class="container" style="padding:0px;">
                                    <div class="why-choose-us-wrapper">
                                        <div class="col-md-6" style="padding:0px;">
                                            <div style="padding:15px;">
                                                <h2 class="title-2">@slide.Title</h2>

                                                <p>@Html.Raw(slide.Description)</p>
                                                <button onclick="window.location.href='@slide.CallToActionUrl'" class="btn btn-green"><span>@slide.CallToActionText</span></button>
                                            </div>
                                        </div>
                                        <div class="col-md-6"  style="padding:0px;">
                                            <img src="@slide.Photo" alt="@slide.Title" class="secondarySliderImage img-responsive" style="max-height:350px; max-width:575px; clear:left;" />
                                        </div>
                                    </div>
                                    
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <br style="clear:both" />
    </div>
                }