@model CmsCoreV3.Models.Form
@addTagHelper "CmsCoreV3.Helpers.FormFieldHelper, CmsCoreV3"
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4">
                <form action="/Home/PostForm" method="post" henctype="multipart/form-data">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12 ">
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.Slug)
                            <div class="form-body">
                                <div class="form-group">
                                    <h1>@Html.DisplayFor(model => model.FormName)</h1><br />
                                </div>
                                <div class="form-group">
                                    @if (!String.IsNullOrEmpty(Model.Description))
                                    {
                                        @Html.Raw(Model.Description)
                                    }
                                </div>
                                @foreach (FormField item in Model.FormFields)
                                {
                                    <div class="form-group">
                                        <formField form-field="item" required="false" read_only="false" show-label="true" />
                                    </div>
                                }
                            </div>
                            @*<div class="form-group">
                                    @Html.Raw(Model.ClosingDescription)
                                </div>*@
                            <input style="background-color:green" class="btn btn-success" type="submit" value="Gönder" /><br /><br />
                        </div>
                    </fieldset>
                </form>
            </div>
                    <div class="col-md-6"></div>
                </div>
        </div>
    </div>
</div>

