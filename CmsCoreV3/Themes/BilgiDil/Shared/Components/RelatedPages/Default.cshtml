@model IEnumerable<Page>
@inject AppTenant Tenant
@foreach (var item in Model)
{
    
        <li class="relatedPage @(item.Meta3)" @Html.Raw(ViewBag.CurrentPageId==item.Id?"style=\"background-color: #1b81c4 !important; color:#ffffff !important;\"":"")>
            <div><a href="@(Tenant.RequireSSL?"https":"http")://@Tenant.Hostname/@ViewData["culture"]/@Html.Raw(item.Slug)" class="link title "  @Html.Raw(ViewBag.CurrentPageId==item.Id?"style=\"color:#ffffff !important;\"":"")>@(item.Title)</a></div>
        </li>

}