@model CmsCoreV3.Models.ShippingClass

@{
    ViewData["Title"] = "Düzenle";
}
<script src="~/js/generate-slug.js"></script>
<h2>Düzenle</h2>

<h4>Kargo Sınıfı</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShippingClassName" class="control-label"></label>
                <input asp-for="ShippingClassName" class="form-control"  onblur="if ($('#Slug').val() == '') {$('#Slug').val(slug($('#ShippingClassName').val().toLowerCase(),'-'));}"  />
                <span asp-validation-for="ShippingClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control"  onblur="if ($('#Slug').val() == '') {$('#Slug').val(slug($('#ShippingClassName').val().toLowerCase(),'-'));}"  />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="CreateDate" type="hidden" />
            <input asp-for="CreatedBy" type="hidden" />
            <input asp-for="UpdateDate" type="hidden" />
            <input asp-for="UpdatedBy" type="hidden" />
            <input asp-for="AppTenantId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
