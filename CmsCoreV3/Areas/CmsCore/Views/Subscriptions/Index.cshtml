@model IEnumerable<CmsCoreV3.Models.Subscription>

@{
    ViewData["Title"] = "E-Posta Aboneleri";
}

<h2>E-Posta Aboneleri</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Abone Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsSubscribed)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.SubscriptionDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UnsubscriptionDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AppTenantId)
            </th>

            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSubscribed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnsubscriptionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppTenantId)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
