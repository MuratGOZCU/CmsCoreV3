@model CmsCoreV3.Models.Form

@{
    ViewData["Title"] = "Formu Düzenle";
}

<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script>
<script src="~/js/generate-slug.js"> </script>
<h2>Form Düzenle</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FormName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FormName" class="form-control" />
                <span asp-validation-for="FormName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Slug" class="col-md-2 control-label">Bağlantı</label>
            <div class="col-md-10">
                <input type="text" asp-for="Slug" class="form-control" tabindex="2" onblur="if ($('#Slug').val() == '') {$('#Slug').val(slug($('#FormName').val().toLowerCase(),'-'));}" />
                <span class="text-danger" asp-validation-for="Slug"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailTo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailTo" class="form-control" />
                <span asp-validation-for="EmailTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailBcc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailBcc" class="form-control" />
                <span asp-validation-for="EmailBcc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailCc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailCc" class="form-control" />
                <span asp-validation-for="EmailCc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <textarea asp-for="Description" tabindex="3" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
                <script type="text/javascript">
                    CKEDITOR.replace('Description');
                </script>

                <div id="content2" style="display: none" data-sample="2">
                    <p>The number of <code>change</code> events:<strong><span id="changes"></span></strong>.</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Template" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Template" class="form-control" />
                <span asp-validation-for="Template" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <label asp-for="ClosingDescription" class="col-md-2 control-label"></label>

                <div class="col-md-10">
                    <textarea asp-for="ClosingDescription" tabindex="3" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="ClosingDescription"></span>
                    <script type="text/javascript">
                        CKEDITOR.replace('ClosingDescription');
                    </script>

                    <div id="content2" style="display: none" data-sample="2">
                        <p>The number of <code>change</code> events:<strong><span id="changes"></span></strong>.</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="GoogleAnalyticsCode" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="GoogleAnalyticsCode" class="form-control"></textarea>
                    <span asp-validation-for="GoogleAnalyticsCode" class="text-danger"></span>
                </div>
            </div>
            <fieldset>
                <legend>Kullanıcıya Yapılan Dönüşler</legend>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="SendMailToUser" />
                            <label asp-for="SendMailToUser"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserMailSubject" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="UserMailSubject" class="form-control" />
                        <span asp-validation-for="UserMailSubject" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserMailContent" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <textarea asp-for="UserMailContent" tabindex="3" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="UserMailContent"></span>
                        <script type="text/javascript">
                            CKEDITOR.replace('UserMailContent');
                        </script>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input asp-for="UserMailAttachment" type="file" />
                        <label asp-for="UserMailAttachment"></label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="SendSMS1ToUser" />
                            <label asp-for="SendSMS1ToUser"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserSMS1" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <textarea asp-for="UserSMS1" class="form-control"></textarea>
                        <span asp-validation-for="UserSMS1" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="SendSMS2ToUser" />
                            <label asp-for="SendSMS2ToUser"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserSMS2" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <textarea asp-for="UserSMS2" class="form-control"></textarea>
                        <span asp-validation-for="UserSMS2" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="IsPublished" />
                        <label asp-for="IsPublished"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
                    <span asp-validation-for="LanguageId" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
            </div>
        </div>
        </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
