@model IEnumerable<CmsCoreV3.Models.Form>

@{
    ViewData["Title"] = "Formlar";
}

<h2>Form</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Form Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FormName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.EmailTo)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Language.NativeName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.EmailCc)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Template)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.EmailBcc)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.NativeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Template)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-default" asp-action="Clone" asp-route-id="@item.Id">Klonla</a>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                <a class="btn btn-success" asp-action="Preview" asp-route-id="@item.Id">Önizleme</a>
                <a class="btn btn-success" href="javascript:void(0);" onclick="$('#myModal').modal('show'); $('#dateRangeId').val('@item.Id');">Excel</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Excel'e Export Et</h4>
            </div>
            <div class="modal-body">
                <form id="dateRangeForm" asp-action="ExportToCsv">
                    <input type="hidden" name="Id" id="dateRangeId" />
                    <div class="row">
                        <div class="col-md-4">
                            Başlangıç Tarihi
                        </div>
                        <div class="col-md-8">
                            <input type="date" name="startDate" class="form-control" id="startDate" value="@(DateTime.Now.Year)-@(DateTime.Now.Month-1)-1" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            Bitiş Tarihi
                        </div>
                        <div class="col-md-8">
                            <input type="date" name="endDate" class="form-control" id="endDate" value="@(DateTime.Now.Year)-@(DateTime.Now.Month)-1" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="document.getElementById('dateRangeForm').submit();">Export</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
            </div>
        </div>

    </div>
</div>
