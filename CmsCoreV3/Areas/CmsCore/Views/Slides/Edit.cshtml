@model CmsCoreV3.Models.Slide

@{
    ViewData["Title"] = "Slide Düzenle";
}
<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script>
<h2>Slide Düzenle</h2>

<form asp-action="Edit">
    <div class="form-horizontal">

        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" tabindex="3" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
                <script type="text/javascript">
                    CKEDITOR.replace('Description');
                </script>


            </div>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Photo" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Photo)</label>
            <div class="col-md-10">
                <div class="input-group">
                    <input asp-for="Photo" class="form-control" />
                    <span class="input-group-btn">
                        <a class="btn btn-info" id="uploadModal" type="button" onclick="browseMedia('Photo')">...</a>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="Video" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Video)</label>
            <div class="col-md-10">
                <div class="input-group">
                    <input asp-for="Video" class="form-control" />
                    <span class="input-group-btn">
                        <a class="btn btn-info" id="uploadModal" type="button" onclick="browseMedia('Video')">...</a>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Video, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="CallToActionText" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CallToActionText" class="form-control" />
                <span asp-validation-for="CallToActionText" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CallToActionUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CallToActionUrl" class="form-control" />
                <span asp-validation-for="CallToActionUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="DisplayTexts" />
                    <label asp-for="DisplayTexts"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsPublished" />
                    <label asp-for="IsPublished"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SliderId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="SliderId" class="form-control" asp-items="ViewBag.SliderId"></select>
                <span asp-validation-for="SliderId" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreateDate" class="form-control" readonly/>
                <span asp-validation-for="CreateDate" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedBy" class="form-control" readonly/>
                <span asp-validation-for="CreatedBy" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdateDate" class="form-control" readonly/>
                <span asp-validation-for="UpdateDate" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdatedBy" class="form-control" readonly/>
                <span asp-validation-for="UpdatedBy" class="text-danger" ></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "Photo" } })
@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "Video" } })
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
