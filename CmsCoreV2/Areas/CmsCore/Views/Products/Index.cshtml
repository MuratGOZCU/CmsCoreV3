@model IEnumerable<CmsCoreV2.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<h2>Ürünler</h2>
<form id="supplierForm">
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary" asp-action="Create">Yeni Ürün Oluştur</a>
    </div>
    <div class="col-md-6">
        <select name="SupplierId" asp-items="@ViewBag.Suppliers" class="form-control pull-right" onchange="document.getElementById('supplierForm').submit()">
            <option value="">Tüm Tedarikçiler</option>
        </select>
    </div>
</div>
</form>
<hr />
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap all">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.SalePrice)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.TaxStatus)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.TaxClass)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.StockCode)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.StockCount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.StockStatus)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProductType)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProductUrl)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.PurchaseNote)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.MenuOrder)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ProductImage)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ViewCount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.SaleCount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CatalogVisibility)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IsFeatured)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CrossSell)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.GroupedProduct)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Language)
                </th>
                <th class="text-nowrap all">
                    @Html.DisplayNameFor(model => model.UpSell)
                </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
