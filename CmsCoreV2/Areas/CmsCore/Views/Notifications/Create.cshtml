@model CmsCoreV2.Models.Notification

@{
    ViewData["Title"] = "Bildirim Oluştur";
}

<h2>Yeni Bildirim Oluştur</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Body" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Body" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
        </div>
       <div class="form-group">
            <label asp-for="MailTo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MailTo" class="form-control" />
                <span asp-validation-for="MailTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MailCc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MailCc" class="form-control" />
                <span asp-validation-for="MailCc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
