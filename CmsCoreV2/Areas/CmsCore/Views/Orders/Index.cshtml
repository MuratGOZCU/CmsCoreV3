@model IEnumerable<CmsCoreV2.Models.Order>

@{
    ViewData["Title"] = "Siparişler";
}

<h2>Siparişler</h2>

<form id="supplierForm">
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary" asp-action="Create">Yeni Sipariş Oluştur</a>
    </div>
    <div class="col-md-6">
        <select name="SupplierId" asp-items="@ViewBag.Suppliers" class="form-control pull-right" onchange="document.getElementById('supplierForm').submit()">
            <option value="">Tüm Tedarikçiler</option>
        </select>
    </div>
</div>
</form>
<hr />
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap all">
                Müşteri
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.BillingEmail)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.BillingPhone)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.TransactionId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CustomerNote)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AppTenantId)
            </th>

            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionId)
            </td>
            <td>
                ₺@Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.Id)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>
