@model IEnumerable<CmsCoreV2.Models.Feedback>

@{
    ViewData["Title"] = "Geri Bildirimler";
}

<h2>Geri Bildirimler</h2>

        <form>
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="number" class="form-control" name="skip" placeholder="Atla" value="@ViewBag.Skip" />
                        <span class="input-group-addon">-</span>
                        <input type="number" class="form-control" name="take" placeholder="Al" value="@ViewBag.Take" />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="input-group">

                        <select name="formId" class="form-control">
                            @foreach (var item in ViewBag.Forms)
                {
                    @if (item.Id == ViewBag.FormId)
        {
            <option value="@item.Id" selected>@item.FormName</option>
}
else
{
            <option value="@item.Id">@item.FormName</option>
}
    }
                        </select><span class="input-group-btn">
                            <button type="submit" class="btn btn-success">Filtrele</button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
<hr />
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.SentDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FormId)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FormName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IP)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> 
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
