@model IEnumerable<CmsCoreV2.Models.Coupon>

@{
    ViewData["Title"] = "Kuponlar";
}

<h2>Kuponlar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Kupon Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.LimitPerCoupon)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.LimitUse)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.LimitPerUser)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DiscountType)
            </th>
            <th class="text-nowrap desktop">
                @Html.DisplayNameFor(model => model.CouponCode)
            </th>
            <th class="text-nowrap desktop">
                @Html.DisplayNameFor(model => model.CouponAmount)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AllowFreeShipping)
            </th>
            <th class="text-nowrap desktop">
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.MinimumSpending)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.MaximumSpending)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OnlyIndividualUse)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ExcludeDiscountProduct)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.RestrictedEmails)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
   
            <th data-orderable="false" class="all dt-right">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimitPerCoupon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimitUse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LimitPerUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CouponCode)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.CouponAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowFreeShipping)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumSpending)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumSpending)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnlyIndividualUse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExcludeDiscountProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RestrictedEmails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
