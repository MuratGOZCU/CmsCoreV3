                            <li class="social-instagram"><a href="https://www.instagram.com/birinsanbelgelendirme/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
           
            <div class="copyright-content">
                <div class="container">
                    <div class="copyright-text text-center">
                       Bir İnsan Kariyer Gelişim & Belgelendirme A.Ş 2017 Tüm Hakkı Saklıdır.
                    </div>
                </div>
            </div>
           

        </footer>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->
    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>
    <!--Plugins-->
    <script src="/polocorporate5/js/jquery.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    
    <script src="/polocorporate5/js/plugins.js"></script>
    <!--Fix Form -->
    <script src="~/polocorporate5/js/Global.js"></script>

    <!--Template functions-->
    <script src="/polocorporate5/js/functions.js"></script>

    <!-- Temp Scripts-->
  
    <!-- LOADING SCRIPTS FOR PAGE-->
   
    <script src="~/lib/jquery.maskedinput/dist/jquery.maskedinput.js"></script>
    <script>
        $(document).ready(function () {
            $('.carousel-logos').owlCarousel({
                margin: 115,
                loop: true,
                //lazyLoad: true,
                nav: false,
                autoplay: true,
                autoplayTimeout: 5000,
                smartSpeed: 1500,
                responsiveClass: true,
                responsive: {
                    0: {
                        items: 2,
                        margin: 30,
                    },
                    320: {
                        items: 3,
                        margin: 40,
                    },
                    480: {
                        items: 3,
                        margin: 50,
                    },
                    600: {
                        items: 4,
                        margin: 90,
                    },
                    768: {
                        items: 5,
                        margin: 60,
                    },
                    1024: {
                        items: 5,
                        margin: 90,
                    },
                    1025: {
                        items: 6
                    }
                }
            });
        });
        function rssSetDuration() {
            rssDuration = $(".marqueeCrawl a").length * 8 + "s";
            $(".marqueeCrawl").css("animationDuration", rssDuration);
            $(".marqueeCrawl").show(); // IE recalculate fix
        }

        $(window).on("load", function () {
            rssSetDuration();
        });
    </script>
    @if (HttpContextAccessor.HttpContext.Items["scripts"] != null)
    {
        @Html.Raw(HttpContextAccessor.HttpContext.Items["scripts"])
    }
    @RenderSection("scripts", required: false)
    @Html.Raw(ViewBag.FooterScript)
</body>

</html>
