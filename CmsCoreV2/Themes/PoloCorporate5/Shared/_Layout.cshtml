                                            <li><a href="@(Tenant.RequireSSL?" https":"http")://@Tenant.Hostname/@ViewData["culture"]/duyurular">Duyurular</a></li>
                                            <li><a href="@(Tenant.RequireSSL?" https":"http")://@Tenant.Hostname/@ViewData["culture"]/haberler">Haberler</a></li>
                                        </ul>
