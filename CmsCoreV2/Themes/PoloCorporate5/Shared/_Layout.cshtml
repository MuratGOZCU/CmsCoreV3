                                <li class="social-instagram"><a href="https://www.instagram.com/birinsanbelgelendirme/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end: TOPBAR -->
        <!-- Header -->
        <header id="header">
            <div id="header-wrap">
                <div class="container">
                    <!--Logo-->
                    <div id="logo">
                        <a href="/" class="logo">
                            <img src="/polocorporate5/images/logo.png" alt="Bir İnsan Gelişim Akademisi Belgelendirme">
                        </a>
                    </div>
                    <!--End: Logo-->
                    <!--Top Search Form-->
                    <div id="top-search">
                        <form action="@(Tenant.RequireSSL?" https":"http")://@Tenant.Hostname/@ViewData["culture"]/arama">
                            <input type="text" name="query" class="form-control" value="" placeholder="Arama Yapmak İçin Yazın ve Enter'e Basın">
                        </form>
                    </div>
                    <!--end: Top Search Form-->
                    <!--Header Extras-->
                    <div class="header-extras">
                        <ul>
                            <li>
                                <!--top search-->
                                <a id="top-search-trigger" href="#" class="toggle-item">
                                    <i class="fa fa-search"></i>
                                    <i class="fa fa-close"></i>
                                </a>
                                <!--end: top search-->
                            </li>
                            
                          
                        </ul>
                    </div>
                    <!--end: Header Extras-->
                    <!--Navigation Resposnive Trigger-->
                    <div id="mainMenu-trigger">
                        <button class="lines-button x"> <span class="lines"></span> </button>
                    </div>
                    <!--end: Navigation Resposnive Trigger-->
                    <!--Navigation-->
                    <div id="mainMenu" class="light">
                        <div class="container">
                            
                        @await Component.InvokeAsync("Menu", new { MenuLocation = "Primary" })
                      
                    
