@inject AppTenant Tenant;
@inject CustomLocalizer Localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewData["Title"] - @Tenant.Title</title>
    <meta name="description" content="@ViewData["Description"]">
    @if (ViewData["Keywords"] != null && ViewData["Keywords"].ToString() != "")
    {
        <meta name="keywords" content="@ViewData["Keywords"]">
    }
    @if (ViewData["Title"] == "404 - Sayfa bulunamadı")
    {
        <meta name="robots" content="noindex">
    };
    <!-- Stylesheets & Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,800,700,600|Montserrat:400,500,600,700|Raleway:100,300,600,700,800" rel="stylesheet" type="text/css" />
    <link href="/polocorporate5/css/plugins.css" rel="stylesheet">
    <link href="/polocorporate5/css/style.css" rel="stylesheet">
    <link href="/polocorporate5/css/responsive.css" rel="stylesheet">
    <link href="/polocorporate5/css/custom.css" rel="stylesheet">
    <!-- Template color -->
    <link href="/polocorporate5/css/color-variations/green.css" rel="stylesheet" type="text/css" media="screen">
    <link rel="icon" type="image/png" href="/polocorporate5/images/favicon.png" alt="favicon" />
    @Html.Raw(ViewBag.HeaderScript)
    @Html.Raw(ViewBag.GoogleAnalytics)
</head>

