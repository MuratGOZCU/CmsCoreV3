                <div class="container">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            <!-- Footer widget area 1 -->
                            <div class="widget clearfix widget-contact-us">
                                <img id="footer-logo" src="/polocorporate5/images/logo.png" alt="Bir İnsan Gelişim Akademisi Belgelendirme">
                                
