@addTagHelper *, Sakura.AspNetCore.Mvc.PagedList
@model Sakura.AspNetCore.IPagedList<CmsCoreV2.Models.Dtos.SearchDto>
@inject CustomLocalizer Localizer
@inject AppTenant Tenant

@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="edugate-layout-1">

            <div class="edugate-content">

                <a href="@(Tenant.RequireSSL?"https":"http")://@Tenant.Hostname/@ViewData["culture"]/@item.Slug" class="title"><span style="font-weight:bold; color:black;">@item.Title</span></a>
                <div class="description" style="padding-bottom:10px;">
                    @Html.Raw(item.Description)
                </div>

                <a href="@(Tenant.RequireSSL?"https":"http")://@Tenant.Hostname/@ViewData["culture"]/@item.Slug" class="btn btn-green"><span>@Localizer["Devamını oku..."]</span></a>
                <br />
            </div>
            <br />

        </div>
    }

    <div class="row" >
        <div class="pagination pagination-simple ">
            <ul>
                <pager resource='SearchDto' />
            </ul>
        </div>
    </div>

}